<%- include('navbar.ejs') %>

    <div class="container mt-5">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event me-2"></i>
                    Add Donation Camp
                </h5>
                <button class="btn btn-light btn-sm" type="button" data-bs-toggle="collapse"
                    data-bs-target="#campFormCollapse" aria-expanded="false" aria-controls="campFormCollapse">
                    <i class="bi bi-chevron-down me-1"></i>
                </button>
            </div>

            <div class="card-body">
                <!-- Collapsible form -->
                <div class="collapse" id="campFormCollapse">
                    <form action="/admin/add_donation_camp" method="POST" enctype="multipart/form-data"
                        class="border-top pt-4 mt-3">

                        <!-- Camp Title -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Camp Title</label>
                            <input type="text" name="title" class="form-control" required>
                        </div>

                        <!-- Date -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Camp Date</label>
                            <input type="date" name="date" id="camp_date" class="form-control" placeholder="date"
                                required>
                        </div>

                        <!-- Time -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">Start Time</label>
                                <input type="time" name="start_time" id="start_time" class="form-control"
                                    onchange="showTime()" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-semibold">End Time</label>
                                <input type="time" name="end_time" id="end_time" class="form-control"
                                    onchange="showTime()" required>
                            </div>
                        </div>

                        <!-- AM PM Preview -->
                        <div class="mb-3 text-muted">
                            <i class="bi bi-clock me-2"></i>
                            <span id="timePreview">Time Preview: --</span>
                        </div>

                        <!-- Location -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Location</label>
                            <input type="text" name="location" class="form-control" required>
                        </div>

                        <!-- Image -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Camp Image</label>
                            <input type="file" name="image" class="form-control" required>
                        </div>

                        <!-- Camp Status -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Camp Status</label>
                            <select name="status" class="form-select" required>
                                <option value="">-- Select Status --</option>
                                <option value="Today">Today</option>
                                <option value="New">New</option>
                                <option value="Urgent">Urgent</option>
                                <option value="Upcoming">Upcoming</option>
                                <option value="Weekend">Weekend</option>
                            </select>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold">Description</label>
                            <textarea name="description" class="form-control" rows="4"
                                placeholder="Short description for this camp" required></textarea>
                        </div>

                        <!-- Submit -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger px-5">
                                <i class="bi bi-save me-2"></i>Save Camp
                            </button>
                        </div>

                    </form>
                </div>
                <!-- End collapsible form -->

                <!-- Show message when form is collapsed -->
                <div class="text-center text-muted py-3" id="formPlaceholder">
                    <i class="bi bi-arrow-down-circle fs-4 d-block mb-2"></i>
                    Click "Toggle Form" above to add a new donation camp
                </div>
            </div>
        </div>
    </div>

    <script>
        // Hide placeholder when form is shown
        document.getElementById('campFormCollapse').addEventListener('show.bs.collapse', function () {
            document.getElementById('formPlaceholder').style.display = 'none';
        });

        document.getElementById('campFormCollapse').addEventListener('hide.bs.collapse', function () {
            document.getElementById('formPlaceholder').style.display = 'block';
        });
    </script>


    <div class="container-fluid mt-4">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event me-2"></i> Donation Camps
                </h5>
                <a href="/admin/donation_camp" type="button" data-bs-toggle="collapse"
                    data-bs-target="#campFormCollapse" aria-expanded="false" aria-controls="campFormCollapse"
                    class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle me-1"></i> Add Camp
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Camp</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Time</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Image</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% if (camp.length===0) { %>
                                <tr>
                                    <td colspan="8" class="text-muted py-4">
                                        <i class="bi bi-info-circle me-2"></i>No donation camps found
                                    </td>
                                </tr>
                                <% } %>

                                    <% for (var i=0; i < camp.length; i++) { %>
                                        <tr>
                                            <td><strong>
                                                    <%= i + 1 %>
                                                </strong></td>

                                            <td class="fw-semibold text-danger">
                                                <%= camp[i].title %>
                                            </td>

                                            <td>
                                                <span class="badge bg-secondary">
                                                    <%= new Date(camp[i].date).toLocaleDateString('en-CA', {
                                                        year: 'numeric' , month: 'long' , day: 'numeric' }) %>
                                                </span>
                                            </td>

                                            <td>
                                                <span class="badge bg-success">
                                                    <%= new Date('1970-01-01T' +
                                                        camp[i].start_time).toLocaleTimeString('en-US', {
                                                        hour: 'numeric' , minute: '2-digit' , hour12: true }) %>
                                                </span>
                                            </td>

                                            <td>
                                                <span class="badge bg-info">
                                                    <%= new Date('1970-01-01T' +
                                                        camp[i].end_time).toLocaleTimeString('en-US', { hour: 'numeric'
                                                        , minute: '2-digit' , hour12: true }) %>
                                                </span>
                                            </td>


                                            <td>
                                                <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                                                <%= camp[i].location %>
                                            </td>

                                            <td class="text-muted small" style="max-width:200px;">
                                                <%= camp[i].description %>...
                                            </td>

                                            <td>
                                                <% if (camp[i].image && camp[i].image !=="" ) { %>
                                                    <img src="/upload/donation_camp/<%= camp[i].image %>"
                                                        class="rounded shadow-sm"
                                                        style="width:80px;height:60px;object-fit:cover;">
                                                    <% } else { %>
                                                        <span class="text-muted">No Image</span>
                                                        <% } %>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    <%= camp[i].status %>
                                                </span>
                                            </td>


                                            <td>
                                                <a href="/admin/edit_donation_camp/<%= camp[i].id %>"
                                                    class="btn btn-warning btn-sm mb-1">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <a href="/admin/delete_donation_camp/<%= camp[i].id %>"
                                                    class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Are you sure you want to delete this camp?')">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>



    <script>
        function formatTime12(time) {
            if (!time) return '';
            let [h, m] = time.split(':');
            h = parseInt(h);
            let ampm = h >= 12 ? 'PM' : 'AM';
            h = h % 12 || 12;
            return h + ':' + m + ' ' + ampm;
        }

        function showTime() {
            let start = document.getElementById("start_time").value;
            let end = document.getElementById("end_time").value;

            if (start && end) {
                document.getElementById("timePreview").innerText =
                    "Time Preview: " + formatTime12(start) + " - " + formatTime12(end);
            }
        }
    </script>


    <%- include('footer.ejs') %>