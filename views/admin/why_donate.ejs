<%- include('navbar.ejs') %>
    <div class="container mt-5">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>
                    Add "Why Donate Blood" Card
                </h5>
            </div>

            <div class="card-body">
                <form action="/admin/add_why_donate" method="POST" enctype="multipart/form-data">

                    <!-- Card Title -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Card Title</label>
                        <input type="text" name="title" class="form-control" placeholder="e.g. Save Lives" required>
                    </div>

                    <!-- Card Description -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Description</label>
                        <textarea name="description" class="form-control" rows="4"
                            placeholder="Short description for this card" required></textarea>
                    </div>

                    <!-- Bootstrap Icon -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Bootstrap Icon Class</label>
                        <input type="text" name="icon" class="form-control" placeholder="bi bi-heart-pulse-fill"
                            required>
                        <small class="text-muted">
                            Use icons from <a href="https://icons.getbootstrap.com/" target="_blank">Bootstrap Icons</a>
                        </small>
                    </div>

                    <!-- Badge Color -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Badge Color</label>
                        <select name="color" class="form-select" required>
                            <option value="">-- Select Color --</option>
                            <option value="danger">Red</option>
                            <option value="primary">Blue</option>
                            <option value="success">Green</option>
                            <option value="warning">Yellow</option>
                            <option value="info">Info</option>
                        </select>
                    </div>

                    <!-- Image Upload -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold">Card Image</label>
                        <input type="file" name="image" class="form-control" accept="image/*" required>
                    </div>

                    <!-- Submit -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-danger px-5">
                            <i class="bi bi-save me-2"></i>Add Card
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>


    <div class="container mt-5">
        <div class="card shadow border-0">
            <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-card-list me-2"></i>Why Donate Blood Cards
                </h5>
                <a href="/admin/add_why_donate" class="btn btn-light btn-sm">
                    <i class="bi bi-plus-circle"></i> Add New
                </a>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Icon</th>
                                <th>Color</th>
                                <th>Image</th>
                                <th>Created</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% if(info.length===0){ %>
                                <tr>
                                    <td colspan="8" class="text-muted">No records found</td>
                                </tr>
                                <% } %>

                                    <% for(let i=0; i < info.length; i++){ %>
                                        <tr>
                                            <td>
                                                <%= i + 1 %>
                                            </td>

                                            <td class="fw-semibold">
                                                <%= info[i].title %>
                                            </td>

                                            <td class="text-muted text-truncate" style="max-width:250px;">
                                                <%= info[i].description %>
                                            </td>

                                            <!-- Icon Preview -->
                                            <td>
                                                <span class="fs-4">
                                                    <i class="<%= info[i].icon %>"></i>
                                                </span>
                                                <br>
                                                <small class="text-muted">
                                                    <%= info[i].icon %>
                                                </small>
                                            </td>

                                            <!-- Color Badge -->
                                            <td>
                                                <span class="badge bg-<%= info[i].color %>">
                                                    <%= info[i].color %>
                                                </span>
                                            </td>

                                            <!-- Image -->
                                            <td>
                                                <% if (info[i].image) { %>
                                                    <img src="/upload/why_donate/<%= info[i].image %>"
                                                        class="rounded shadow-sm"
                                                        style="height:60px;width:60px;object-fit:cover;">
                                                    <% } else { %>
                                                        <span class="text-muted">No image</span>
                                                        <% } %>
                                            </td>

                                            <td>
                                                <small class="text-muted">
                                                    <%= info[i].created_at.toDateString() %>
                                                </small>
                                            </td>

                                            <!-- Action Buttons -->
                                            <td>
                                                <a href="/admin/edit_why_donate/<%= info[i].id %>"
                                                    class="btn btn-sm btn-primary">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <a href="/admin/delete_why_donate/<%= info[i].id %>"
                                                    onclick="return confirm('Are you sure you want to delete this card?')"
                                                    class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer.ejs') %>