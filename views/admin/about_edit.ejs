<%- include('navbar.ejs') %>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white text-center">
                        <h4 class="mb-0">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Update About Us Details
                        </h4>
                    </div>

                    <div class="card-body p-4">
                        <% if (update && update.length> 0) { %>
                            <form action="/admin/about_update/<%= update[0].about_id %>" method="post"
                                enctype="multipart/form-data">

                                <!-- Hidden ID -->
                                <input type="hidden" name="about_id" value="<%= update[0].about_id %>">

                                <!-- Existing Image -->
                                <div class="mb-3 text-center">
                                    <label class="form-label fw-semibold">Current Image</label><br>
                                    <img src="/upload/about_us/<%= update[0].image %>" alt="About Us Image" width="150"
                                        class="rounded shadow-sm mb-2">
                                </div>


                                <!-- Upload New Image -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-image me-2"></i>Upload New Image
                                    </label>
                                    <input type="file" name="image" class="form-control">
                                    <small class="text-muted">Leave blank to keep existing image</small>
                                </div>

                                <!-- Main Title -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-type me-2"></i>Main Title
                                    </label>
                                    <input type="text" name="title" class="form-control" value="<%= update[0].title %>"
                                        required>
                                </div>

                                <!-- Description -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-card-text me-2"></i>Description
                                    </label>
                                    <textarea name="description" class="form-control" rows="4"
                                        required><%= update[0].description %></textarea>
                                </div>

                                <!-- Focus Points Title -->
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">
                                        <i class="bi bi-bullseye me-2"></i>Focus Points Title
                                    </label>
                                    <input type="text" name="focus_point_title" class="form-control"
                                        value="<%= update[0].focus_point_title %>" required>
                                </div>

                                <!-- Focus Points -->
                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-check-circle me-1"></i>Focus Point 1
                                        </label>
                                        <input type="text" name="focus_point_1" class="form-control"
                                            value="<%= update[0].focus_point_1 %>" required>
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-check-circle me-1"></i>Focus Point 2
                                        </label>
                                        <input type="text" name="focus_point_2" class="form-control"
                                            value="<%= update[0].focus_point_2 %>" required>
                                    </div>

                                    <div class="col-md-4 mb-3">
                                        <label class="form-label fw-semibold">
                                            <i class="bi bi-check-circle me-1"></i>Focus Point 3
                                        </label>
                                        <input type="text" name="focus_point_3" class="form-control"
                                            value="<%= update[0].focus_point_3 %>" required>
                                    </div>
                                </div>

                                <!-- Update Button -->
                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-success px-5">
                                        <i class="bi bi-pencil-square me-2"></i>Update
                                    </button>
                                </div>

                            </form>
                            <% } else { %>
                                <p class="text-center text-danger">No record found to edit</p>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('footer.ejs') %>